# Production Environment Configuration
NODE_ENV=production

# Application URLs
NEXT_PUBLIC_APP_URL=https://starter-template.vercel.app
EXPO_PUBLIC_APP_URL=https://starter-template.vercel.app

# Supabase Configuration (Production)
NEXT_PUBLIC_SUPABASE_URL=https://your-production-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-production-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-production-supabase-service-role-key
SUPABASE_PROJECT_ID=your-production-project-id

# Expo Configuration
EXPO_PUBLIC_SUPABASE_URL=https://your-production-project-id.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-production-supabase-anon-key
EXPO_PUBLIC_ENVIRONMENT=production
EXPO_PUBLIC_APP_VARIANT=production

# Authentication
NEXTAUTH_SECRET=your-secure-nextauth-secret-for-production
NEXTAUTH_URL=https://starter-template.vercel.app

# Database
DATABASE_URL=postgresql://postgres:your-secure-password@your-production-db-host:5432/starter_template_production

# Redis (Production)
REDIS_URL=redis://your-production-redis-host:6379
REDIS_PASSWORD=your-secure-redis-password

# Email (Production)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-production-sendgrid-api-key
SMTP_FROM=noreply@yourapp.com

# File Storage
STORAGE_BUCKET=uploads-production
STORAGE_REGION=us-east-1

# API Configuration
API_RATE_LIMIT=100
API_RATE_WINDOW=900000

# Logging
LOG_LEVEL=warn
LOG_FORMAT=json

# Feature Flags
FEATURE_ANALYTICS=true
FEATURE_PAYMENTS=true
FEATURE_NOTIFICATIONS=true

# External Services (Live keys)
STRIPE_PUBLIC_KEY=pk_live_your-production-stripe-public-key
STRIPE_SECRET_KEY=sk_live_your-production-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-production-stripe-webhook-secret

# Analytics (Production)
GOOGLE_ANALYTICS_ID=GA-PRODUCTION-ID
MIXPANEL_TOKEN=your-production-mixpanel-token
POSTHOG_KEY=your-production-posthog-key

# Monitoring (Production)
SENTRY_DSN=https://your-production-sentry-dsn@sentry.io/your-project
SENTRY_ENVIRONMENT=production

# Cron Jobs
CRON_SECRET=production-cron-secret-must-be-very-secure

# Debug (Disabled in production)
NEXT_PUBLIC_SHOW_DEBUG_INFO=false
EXPO_PUBLIC_SHOW_DEBUG_INFO=false
STORYBOOK_ENABLED=false

# Security Headers
SECURITY_HEADERS_ENABLED=true

# Performance Monitoring
PERFORMANCE_MONITORING=true