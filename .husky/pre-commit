#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run lint-staged for changed files
echo "ğŸ“ Checking staged files..."
pnpm lint-staged

# Run type checking on all packages
echo "ğŸ” Type checking..."
pnpm type-check

# Check for TODO/FIXME comments in staged files
echo "ğŸ“‹ Checking for TODO/FIXME comments..."
staged_files=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|tsx|js|jsx)$' || true)
if [ -n "$staged_files" ]; then
  todo_count=$(echo "$staged_files" | xargs grep -n "TODO\|FIXME\|XXX\|HACK" || true)
  if [ -n "$todo_count" ]; then
    echo "âš ï¸ Warning: Found TODO/FIXME comments in staged files:"
    echo "$todo_count"
    echo "Consider addressing these before committing."
  fi
fi

echo "âœ… Pre-commit checks completed!"