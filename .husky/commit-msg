#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ“ Validating commit message..."

# Validate commit message format
pnpm commitlint --edit $1

# Check commit message length
commit_msg=$(cat $1)
if [ ${#commit_msg} -gt 100 ]; then
  echo "âš ï¸ Warning: Commit message is longer than 100 characters."
  echo "Consider making it more concise for better readability."
fi

# Check for common issues
if echo "$commit_msg" | grep -q "^WIP\|^wip\|^Wip"; then
  echo "âš ï¸ Warning: This appears to be a work-in-progress commit."
  echo "Make sure this is intentional before pushing."
fi

echo "âœ… Commit message validated!"