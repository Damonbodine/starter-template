# Root Environment Variables
# Copy this file to .env and fill in your values
# These are shared across all packages in the monorepo

# =============================================================================
# GLOBAL CONFIGURATION
# =============================================================================
# Application environment
NODE_ENV=development

# Monorepo workspace configuration
WORKSPACE_ROOT=starter-template

# =============================================================================
# SHARED SUPABASE CONFIGURATION
# =============================================================================
# Supabase project URL (shared across all apps)
SUPABASE_URL=https://your-project.supabase.co

# Supabase anon key (public, shared across apps)
SUPABASE_ANON_KEY=your-anon-key-here

# Supabase service role key (server-side only)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Turborepo configuration
TURBO_TEAM=your-turbo-team
TURBO_TOKEN=your-turbo-token

# Package manager
PACKAGE_MANAGER=pnpm

# Build cache
TURBO_CACHE_DIR=.turbo

# =============================================================================
# CI/CD CONFIGURATION
# =============================================================================
# GitHub Actions
CI=false
GITHUB_TOKEN=your-github-token

# Deployment
DEPLOY_ENV=development
DEPLOY_BRANCH=main

# =============================================================================
# SHARED SERVICES
# =============================================================================
# Shared API endpoints
API_BASE_URL=http://localhost:3000/api

# Shared authentication
AUTH_SECRET=your-shared-auth-secret

# Shared database
DATABASE_URL=postgresql://postgres:password@localhost:5432/starter_template

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Shared logging level
LOG_LEVEL=info

# Shared Sentry configuration
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=starter-template

# =============================================================================
# FEATURE FLAGS (GLOBAL)
# =============================================================================
# Global feature toggles
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true
ENABLE_DEBUG_MODE=false