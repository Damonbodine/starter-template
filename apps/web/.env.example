# Next.js Web App Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Your Supabase anon/public key
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase service role key (server-side only, never expose to client)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Supabase JWT secret (for token verification)
SUPABASE_JWT_SECRET=your-jwt-secret-here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application environment (development, staging, production)
NODE_ENV=development

# Application URL (used for redirects, emails, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API base URL (if different from app URL)
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# NextAuth.js secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-nextauth-secret-here

# NextAuth.js URL (should match NEXT_PUBLIC_APP_URL)
NEXTAUTH_URL=http://localhost:3000

# Session cookie settings
SESSION_COOKIE_NAME=starter-template-session
SESSION_MAX_AGE=86400

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:19006

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Email service (e.g., SendGrid, Resend, etc.)
EMAIL_FROM=noreply@yourdomain.com
EMAIL_PROVIDER=resend
RESEND_API_KEY=your-resend-api-key

# File upload service (e.g., Uploadthing, Cloudinary)
UPLOADTHING_SECRET=your-uploadthing-secret
UPLOADTHING_APP_ID=your-uploadthing-app-id

# Analytics (e.g., Google Analytics, Posthog)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Stripe (for payments)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# OAuth providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Sentry (error tracking)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# LogTail or similar logging service
LOGTAIL_TOKEN=your-logtail-token

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
# Enable debug logging
DEBUG=false

# Enable React DevTools in production
NEXT_PUBLIC_ENABLE_DEVTOOLS=false

# Disable telemetry
NEXT_TELEMETRY_DISABLED=1

# Enable bundle analyzer
ANALYZE=false

# =============================================================================
# DATABASE & CACHING
# =============================================================================
# Redis (for caching, sessions, etc.)
REDIS_URL=redis://localhost:6379

# Direct database URL (if needed for migrations, etc.)
DATABASE_URL=postgresql://postgres:password@localhost:5432/your-db

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_ENABLE_MAINTENANCE_MODE=false

# Beta features
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false
NEXT_PUBLIC_ENABLE_EXPERIMENTAL_UI=false