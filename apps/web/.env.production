# Production Environment Configuration
# This file contains production-specific environment variables

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://starter-template.com
NEXT_PUBLIC_API_URL=https://starter-template.com/api

# Production Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-production-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-production-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key
SUPABASE_JWT_SECRET=your-production-jwt-secret

# Production Database
DATABASE_URL=postgresql://postgres:secure-password@production-db:5432/starter_template_prod

# Production Authentication
NEXTAUTH_URL=https://starter-template.com
NEXTAUTH_SECRET=production-secret-key-very-very-secure

# Production Features
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_ENABLE_DEVTOOLS=false
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false

# Production Monitoring
NEXT_PUBLIC_SENTRY_DSN=https://your-production-sentry-dsn
SENTRY_ORG=your-org
SENTRY_PROJECT=starter-template
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Production Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_POSTHOG_KEY=your-production-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Email Service
EMAIL_FROM=noreply@starter-template.com
RESEND_API_KEY=your-production-resend-key

# File Upload
UPLOADTHING_SECRET=your-production-uploadthing-secret
UPLOADTHING_APP_ID=your-production-uploadthing-app-id

# Payment Processing
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# OAuth
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret
GITHUB_CLIENT_ID=your-production-github-client-id
GITHUB_CLIENT_SECRET=your-production-github-client-secret

# Redis Cache
REDIS_URL=redis://production-redis:6379

# Security
CORS_ORIGINS=https://starter-template.com,https://www.starter-template.com

# Tools
NEXT_TELEMETRY_DISABLED=1
DEBUG=false
ANALYZE=false