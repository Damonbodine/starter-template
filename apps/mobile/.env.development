# Mobile Development Environment Configuration

# Application
NODE_ENV=development
EXPO_PUBLIC_APP_SCHEME=starter-template-dev
EXPO_PUBLIC_API_URL=http://localhost:3000/api
EXPO_PUBLIC_WEB_URL=http://localhost:3000

# Development Supabase
EXPO_PUBLIC_SUPABASE_URL=https://your-dev-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-dev-anon-key

# Expo Configuration
EXPO_PROJECT_ID=your-expo-project-id
EAS_BUILD_PROFILE=development

# Development Features
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=false
EXPO_PUBLIC_ENABLE_DEVTOOLS=true
EXPO_PUBLIC_ENABLE_FLIPPER=true
EXPO_PUBLIC_ENABLE_BETA_FEATURES=true

# Platform Features
EXPO_PUBLIC_ENABLE_LOCATION_SERVICES=true
EXPO_PUBLIC_ENABLE_CAMERA=true
EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH=true

# Permissions (relaxed for development)
EXPO_PUBLIC_REQUIRE_CAMERA_PERMISSION=false
EXPO_PUBLIC_REQUIRE_LOCATION_PERMISSION=false
EXPO_PUBLIC_REQUIRE_NOTIFICATION_PERMISSION=false

# Development Tools
EXPO_PUBLIC_DEBUG=true
EXPO_DEV_SERVER_URL=http://localhost:8081

# Maps (optional in development)
# EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your-dev-maps-key

# Background Tasks
EXPO_PUBLIC_ENABLE_BACKGROUND_SYNC=false
EXPO_PUBLIC_BACKGROUND_SYNC_INTERVAL=600000