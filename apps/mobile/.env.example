# Expo React Native Mobile App Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Your Supabase project URL
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Your Supabase anon/public key
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application environment (development, staging, production)
NODE_ENV=development

# App scheme for deep linking
EXPO_PUBLIC_APP_SCHEME=starter-template

# API base URL
EXPO_PUBLIC_API_URL=http://localhost:3000/api

# Web app URL (for OAuth redirects, etc.)
EXPO_PUBLIC_WEB_URL=http://localhost:3000

# =============================================================================
# EXPO CONFIGURATION
# =============================================================================
# Expo project ID (from expo.dev)
EXPO_PROJECT_ID=your-expo-project-id

# EAS build profile
EAS_BUILD_PROFILE=development

# Expo public key (for OTA updates)
EXPO_PUBLIC_KEY=your-expo-public-key

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# OAuth redirect scheme
EXPO_PUBLIC_OAUTH_REDIRECT_SCHEME=starter-template

# Biometric authentication
EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH=true

# Secure storage encryption key
SECURE_STORAGE_KEY=your-secure-storage-key

# =============================================================================
# PUSH NOTIFICATIONS
# =============================================================================
# Expo push notification token
EXPO_PUSH_TOKEN=your-expo-push-token

# Firebase Cloud Messaging (Android)
EXPO_PUBLIC_FCM_SENDER_ID=your-fcm-sender-id

# Apple Push Notification Service (iOS)
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Maps API (Google Maps, Mapbox, etc.)
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
EXPO_PUBLIC_MAPBOX_ACCESS_TOKEN=your-mapbox-token

# Location services
EXPO_PUBLIC_ENABLE_LOCATION_SERVICES=true

# Camera and media
EXPO_PUBLIC_ENABLE_CAMERA=true
EXPO_PUBLIC_ENABLE_MEDIA_LIBRARY=true

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Firebase Analytics
EXPO_PUBLIC_FIREBASE_CONFIG={"apiKey":"...","authDomain":"..."}

# Sentry (error tracking)
EXPO_PUBLIC_SENTRY_DSN=https://your-sentry-dsn

# Amplitude, Mixpanel, or similar
EXPO_PUBLIC_AMPLITUDE_API_KEY=your-amplitude-key
EXPO_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Social media SDKs
EXPO_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id
EXPO_PUBLIC_TWITTER_CONSUMER_KEY=your-twitter-key

# Payment processing
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key

# In-app purchases
EXPO_PUBLIC_REVENUE_CAT_API_KEY=your-revenue-cat-key

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
# Enable debug logging
EXPO_PUBLIC_DEBUG=false

# Enable React DevTools
EXPO_PUBLIC_ENABLE_DEVTOOLS=false

# Enable Flipper (debugging tool)
EXPO_PUBLIC_ENABLE_FLIPPER=false

# Development server URL (for Metro bundler)
EXPO_DEV_SERVER_URL=http://localhost:8081

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
EXPO_PUBLIC_ENABLE_ANALYTICS=true
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=true
EXPO_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true

# Beta features
EXPO_PUBLIC_ENABLE_BETA_FEATURES=false
EXPO_PUBLIC_ENABLE_EXPERIMENTAL_UI=false

# Platform-specific features
EXPO_PUBLIC_ENABLE_IOS_FEATURES=true
EXPO_PUBLIC_ENABLE_ANDROID_FEATURES=true

# =============================================================================
# NATIVE MODULES & PERMISSIONS
# =============================================================================
# Required permissions
EXPO_PUBLIC_REQUIRE_CAMERA_PERMISSION=false
EXPO_PUBLIC_REQUIRE_LOCATION_PERMISSION=false
EXPO_PUBLIC_REQUIRE_NOTIFICATION_PERMISSION=true
EXPO_PUBLIC_REQUIRE_CONTACTS_PERMISSION=false

# Background tasks
EXPO_PUBLIC_ENABLE_BACKGROUND_SYNC=true
EXPO_PUBLIC_BACKGROUND_SYNC_INTERVAL=300000

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================
# App versioning
APP_VERSION=1.0.0
BUILD_NUMBER=1

# Code signing (iOS)
APPLE_TEAM_ID=your-apple-team-id
PROVISIONING_PROFILE_UUID=your-provisioning-profile-uuid

# Android signing
ANDROID_KEYSTORE_PASSWORD=your-keystore-password
ANDROID_KEY_ALIAS=your-key-alias
ANDROID_KEY_PASSWORD=your-key-password